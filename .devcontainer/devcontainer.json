// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
    "name": ".NET Aspire",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/dotnet:9.0-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/powershell:1": {},
        "ghcr.io/devcontainers/features/azure-cli": {
            "version": "latest"
        },
        "ghcr.io/azure/azure-dev/azd": {
            "version": "latest"
        },
        // "ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools:1": {
        //     "version": "latest"
        // },
        "ghcr.io/devcontainers/features/github-cli": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/node:1": {}
        // Running on a ARM64 machine like a Surface Laptop Copilot+PC?
        // Azure Functions Core Tools v4 is not fully supported on ARM64.
        // Install node in the dev container and use the NPM version of Azure Functions Core Tools instead.
        // https://github.com/Azure/azure-functions-core-tools/issues/4279
    },
    // "hostRequirements": {
    //     "cpus": 8,
    //     "memory": "32gb",
    //     "storage": "64gb"
    // },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [5000, 5001],
    // "portsAttributes": {
    //		"5001": {
    //			"protocol": "https"
    //		}
    // }
    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "dotnet restore",
    "onCreateCommand": "npm install -g azure-functions-core-tools@4.0.7332-preview1 && dotnet tool install --global aspire.cli && dotnet new install Aspire.ProjectTemplates --force",
    "postStartCommand": "dotnet build source/AgentFunction.sln && dotnet dev-certs https --trust",
    "customizations": {
        "vscode": {
            "extensions": [
                "azurite.azurite",
                "bierner.markdown-emoji",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "github.vscode-github-actions",
                "github.vscode-pull-request-github@prerelease",
                "humao.rest-client",
                "jeremycaron.csharp-organize-usings",
                "ms-dotnettools.csdevkit",
                "ms-vscode.vscode-node-azure-pack",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "runArgs": [
        "--network=host"
    ]
    // Configure tool-specific properties.
    // "customizations": {},
    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}